<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ApionHome" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_second_primary</item>
        <item name="colorOnPrimary">#000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_primary</item>
        <item name="colorSecondaryVariant">@color/color_second_primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
    </style>

    <style name="StyleButton">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:layout_height">@dimen/dp_36</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="StyleTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dp_36</item>
        <item name="boxBackgroundColor">@color/color_white_trans</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dp_4</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dp_4</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dp_4</item>
        <item name="boxCornerRadiusTopStart">@dimen/dp_4</item>
    </style>

    <style name="StyleEditText" parent="TextNormal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dp_36</item>
        <item name="android:layout_marginStart">@dimen/dp_16</item>
        <item name="android:layout_marginEnd">@dimen/dp_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:background">@drawable/bg_rectangle</item>
        <item name="android:drawablePadding">@dimen/dp_8</item>
        <item name="android:paddingStart">@dimen/dp_8</item>
        <item name="android:paddingEnd">@dimen/dp_8</item>
        <item name="android:inputType">textNoSuggestions</item>
    </style>

    <style name="TextHighlight">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextNormal">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="hintTextColor">@color/color_silver_40</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:drawablePadding">@dimen/dp_1</item>
    </style>

    <style name="TextSingle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">@dimen/dp_8</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SearchViewTheme" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:maxWidth">10000dp</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="DialogAnimationBottomSheet">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>

    <style name="cornerImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dp_4</item>
    </style>

    <style name="roundImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dp_32</item>
    </style>

    <style name="roundImageView48" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">23dp</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>
