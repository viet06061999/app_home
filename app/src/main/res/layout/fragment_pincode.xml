<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context=".ui.pincode.PincodeActivity">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/itunes_artwork"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"

            android:textSize="@dimen/sp_20"
            android:gravity="center"
            android:text="Apion Home - Robo siêu kết nối Môi giới bất động sản"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Nhập mã pin để hoàn thành đăng nhập"
            android:textSize="@dimen/sp_17"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:orientation="horizontal"
            android:weightSum="4"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <EditText
                android:id="@+id/etPassword1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/background_edt_text"
                android:gravity="center"
                android:inputType="textPassword"
                android:maxLength="1"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"


                android:textSize="30dp" />

            <EditText
                android:id="@+id/etPassword2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/background_edt_text"
                android:gravity="center"
                android:inputType="textPassword"
                android:maxLength="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="30dp"/>

            <EditText
                android:id="@+id/etPassword3"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/background_edt_text"
                android:gravity="center"
                android:inputType="textPassword"
                android:maxLength="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="30dp"/>

            <EditText
                android:id="@+id/etPassword4"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"

                android:background="@drawable/background_edt_text"
                android:gravity="center"
                android:inputType="textPassword"
                android:maxLength="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="30dp"
                android:textSize="30dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/buttonlogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="110dp"
            android:background="@drawable/background_button1"
            android:text="Đăng nhập"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_18"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="65dp"
            android:text="Thoát tài khoản"
            android:textColor="#000000"
            android:textSize="@dimen/sp_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>